{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@f/*": ["./front/*"],
      "@s/*": ["./server/*"],
      "@c/*": ["./common/*"]
    },
    "noImplicitAny": true,
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@nuxtjs/vuetify",
      "@nuxtjs/firebase",
      "reflect-metadata"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
